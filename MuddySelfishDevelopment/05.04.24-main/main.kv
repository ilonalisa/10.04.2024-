#:set color_txt_d "#341109"
#:set color_btn_bg "#C21460"
#:set color_btn_bg_pr "#66B032"
#:set color_bg "#1B3409"
#:set color_a "#FEFE33"
#:set color_b"#F7F7D4"

<ButtonMenu@Button>:
  size_hint_y: 0,3
  font_size: "30sp"
  color:color_txt_d
  background_color:color_btn_bg
  background_normal: ''
  on_release: self.background_color = color_btn_bg
  background_down: ''
  on_press: self.background_color = color_btn_bg
  font_name:'assets/Tacone-Regular.ttf'
  
<MenuScreen>:
    canvas.before:
        Color:
            rgba: 1,1,0,1
        Rectangle:
          pos: self.pos
          size: self.size
    BoxLayout:
        orientetion:'vertical'
        padding:'20dp'
        sapcing:'20dp'

        Label:
            text: 'Cosmo Advendure'
            font_name:'assets/Tacone-Regular.ttf'
            font_size: '30dp'
            color: 'red'
            size_hint_y: .2

        Image:
            source:'assets/images/apple.png/'
            size_hint_y: .3
            allow_stretch: True

        Widget:
            size_hint_y: 0.3

        ButtonMenu:
            text: "Start"
            on_press: root.screenmanager.current = 'game'
        ButtonMenu:
            text:"Lider Board"
        Button Menu:
            text: "settings"

<GameScren>:
    BoxLayout:
        orientation:'vertical'
        BoxLayout:
            size_hint_y: 0.1
            Label:
                text:'score: ' + str(root.poiints)
                font_name: 'assets/Lemon-Regular.ttf'
                font_size: '30sp'
                color: color_a
       FloatLayout:
           size_hint_y: 0.8
           Planet:
               id: planet
        BoxLayout:
            size_hint_y: 0.1
<Planet>
    allow_stretch: True
    size_hint: None, None
    size:'200dp','200dp'
    center: self.parent.center
   
